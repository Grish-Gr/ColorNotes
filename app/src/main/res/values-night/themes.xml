<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColorNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_grey</item>
        <item name="colorPrimaryVariant">@color/night_grey_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_blue</item>
        <item name="colorSecondaryVariant">@color/night_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="navigationIcon">@drawable/ic_sun</item>
        <item name="cardViewStyle">@style/CardView.ItemNote</item>
    </style>
</resources>